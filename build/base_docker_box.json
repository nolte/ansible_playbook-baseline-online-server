{
    "variables": {
        "output_path": "./.output-vagrant-docker"
    },
    "provisioners": [
        {
            "type": "ansible",
            "playbook_file": "../playbook-base-configureation.yml",
            "user": "vagrant",
            "groups": [
                "dockerbased"
            ],
            "inventory_directory": "../molecule/inventory"
        }
    ],
    "builders": [
        {
            "communicator": "ssh",
            "source_path": "centos/7",
            "provider": "virtualbox",
            "box_name": "base-dockerbox",
            "box_version": "1905.1",
            "add_force": true,
            "type": "vagrant",
            "output_dir": "{{user `output_path`}}/vagrant"
        }
    ],
    "post-processors": []
}

# editorconfig.org
root = true

[*]
indent_style = space
indent_size = 4
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[docs/**.md]
# allow line break https://3os.org/markdownCheatSheet/lineBreaks/#line_break_with_2_spaces
trim_trailing_whitespace = false

[{makefile,Makefile}]
indent_style = tabs

[{Vagrantfile}]
indent_size = 2

[{*.yml,*.yaml, *.tf}]
indent_style = space
indent_size = 2
